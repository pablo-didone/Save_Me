<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="custom_font" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">5sp</item>
    </style>

    <style name="custom_edit_text" parent="@android:style/Widget.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white_text</item>
        <item name="android:padding">3sp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="custom_spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@color/white_text</item>
        <item name="android:layout_width">100sp</item>
        <item name="android:layout_height">25sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
